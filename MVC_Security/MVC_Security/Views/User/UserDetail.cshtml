@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityUserRole>
@{ ViewBag.Title = "UserDetail"; }

<h2>Detail van de user <i>@ViewBag.usernaam</i></h2>
<h3>Roles :</h3>
@if (Model.Count != 0)
{
    <table class="zebra">
        <thead>
            <tr>
                <th>Id</th>
                <th>Delete role for user</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userrol in Model)
            {
                <tr>
                    <td>@userrol.RoleId</td>
                    <td align="center">
                        <a href="/User/VerwijderRoleForMember?userid=@userrol.UserId&roleid=@userrol.RoleId">
                            <img src="~/Images/delete.png" alt="verwijderen" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>User @ViewBag.usernaam behoort tot geen enkele rol.</p>
}
<a href="/User/Userbeheer">Terug naar userbeheer</a>