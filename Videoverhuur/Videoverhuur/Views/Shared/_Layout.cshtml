<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <h1><img src="~/Images/videoVerhuur.jpg" alt="verhuur" /></h1>
    </div>
    <div>
        <br />
        <br />
        @if (Session["Klant"] != null)
        {
            var klant = (Videoverhuur.Models.Klant)Session["Klant"];
            ViewBag.Klant = "Welkom, " + klant.Voornaam + " " + klant.Naam;
        }
        else
        {
            ViewBag.Klant = "Eerst aanmelden om te kunnen huren ! ";
        }
        <h3>@ViewBag.Klant</h3>
        <br />
        <div>
            <h3>
                <a href="@Url.Action("Index", "Home")">Uitloggen en naar beginpagina</a>&nbsp;&nbsp;&nbsp;&nbsp;
                @if (Session.Count > 1)
                {<a href="@Url.Action("Afrekenen", "Home")">Afrekenen</a>}
            </h3>
        </div>
        <br />
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
