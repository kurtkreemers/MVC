@using MVCBierenApplication.Models
@model  List<Bier>

@{
    ViewBag.Title = "Index";
}

<h2>Alle Bieren</h2>
<table class="zebra">
    <thead>
        <tr>
            <th>ID</th>
            <th>Naam</th>
            <th>AlcoholPercentage</th>
            <th>Verwijderen</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var bier in Model)
        {
       
        <tr>
            <td>@Html.DisplayFor(m => bier.BierNr)</td>
            <td>@bier.Naam</td>
            <td align="center">@Html.DisplayFor(m => bier.Alcohol)</td>
            <td align="center"><a href='@Url.Action("Verwijderen", "Bier" , new { ID=bier.BierNr })'><img src="~/Images/delete.png" alt="Delete" title="@bier.Naam verwijderen" /></a></td>
        </tr>
        }
    </tbody>
</table>
<p></p>
<p>@Html.ActionLink("Bier toevoegen", "Toevoegen")</p>

